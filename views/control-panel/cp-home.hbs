<main class="dashboard-container">
  <section class="welcome-card">
    <h1>Control Panel</h1>
  </section>

  <!-- Data Entry Statistics -->
  <section class="section">
    <h2>Data Entry Statistics</h2>
    <div class="card-grid">
      <a href="/control-panel/entry-statistics" class="feature-card">
        <div class="feature-icon"><i class="fas fa-chart-bar"></i></div>
        <div class="feature-text">
          <h3>Data Overview</h3>
          <p>View overall statistics and trends from submitted entries.</p>
        </div>
      </a>
    </div>
  </section>

  <!-- Staff Functions -->
  <section class="section">
    <h2>Staff Functions</h2>
    <div class="card-grid">
      <a href="/control-panel/user-applications" class="feature-card">
        <div class="feature-icon"><i class="fas fa-user-check"></i></div>
        <div class="feature-text">
          <h3>User Applications</h3>
          <p>Review and approve new registration requests from users.</p>
        </div>
      </a>

      <a href="/control-panel/partners" class="feature-card">
        <div class="feature-icon"><i class="fas fa-handshake"></i></div>
        <div class="feature-text">
          <h3>Partners</h3>
          <p>Manage partner organizations and affiliated groups.</p>
        </div>
      </a>
    </div>
  </section>

  <!-- Admin Functions -->
  {{#ifEquals user.supertype 0}}
  <section class="section">
    <h2>Admin Functions</h2>
    <div class="card-grid">
      <a href="/control-panel/users" class="feature-card admin-card">
        <div class="feature-icon"><i class="fas fa-users-cog"></i></div>
        <div class="feature-text">
          <h3>Manage Users</h3>
          <p>Update roles, deactivate accounts, and monitor user activity.</p>
        </div>
      </a>

      <a href="/control-panel/roles" class="feature-card admin-card">
        <div class="feature-icon"><i class="fas fa-user-shield"></i></div>
        <div class="feature-text">
          <h3>Manage Roles</h3>
          <p>Create, assign, and edit user roles.</p>
        </div>
      </a>
    </div>
  </section>
  {{/ifEquals}}

  <!-- Return to Dashboard -->
  <section class="section">
    <h2>Return</h2>
    <div class="card-grid">
      <a href="/dashboard" class="feature-card return-card">
        <div class="feature-icon"><i class="fas fa-arrow-left"></i></div>
        <div class="feature-text">
          <h3>Return to Dashboard</h3>
          <p>Go back to the main user-facing dashboard.</p>
        </div>
      </a>
    </div>
  </section>
</main>

