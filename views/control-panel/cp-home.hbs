  gap: 15px;
}

.feature-icon i {
  font-size: 2rem;
  color: #127009;
  min-width: 30px;
}

.feature-text h3 {
  font-size: 1.1rem;
  margin: 0;
  color: #127009;
}

.feature-text p {
  font-size: 0.95rem;
  margin: 4px 0 0;
  color: #444;
