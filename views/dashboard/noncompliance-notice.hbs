<h2 class="title">⚠️ Non-Compliance Warning Notices</h2>

<div class="notice-container">
  {{#each clients}}
    <div class="warning-card">
      <div class="warning-header">
        <h3><i class="fas fa-user-circle"></i> {{firstname}} {{lastname}}</h3>
        <span class="company"><i class="fas fa-building"></i> {{company_name}}</span>
      </div>

      <div class="warning-body">
        <p><strong>Supertype:</strong> {{supertype_name}}</p>
        <p><strong>Total Submissions:</strong> {{entry_count}}</p>
        <p><strong>Total Collected:</strong> {{total_collected}} kg</p>
        <p><strong>Required Quota:</strong> {{required_quota}} kg</p>
        <p><strong>Status:</strong> <span class="noncompliant-text">{{compliance_status}}</span></p>
      </div>
    </div>
  {{/each}}
</div>

<form action="/dashboard/noncompliance/pdf" method="POST" style="text-align: right; margin-bottom: 20px;">
  <button type="submit" class="pdf-btn">
    <i class="fa-solid fa-file-pdf"></i> Download Compliance Report
  </button>
</form>



<style>
.pdf-btn {
  margin-bottom: 20px;
  background-color: #2e7d32;
  color: white;
  padding: 10px 20px;
  font-size: 15px;
  border: none;
  border-radius: 8px;
  cursor: pointer;
}
.pdf-btn:hover {
  background-color: #1b5e20;
}

.title {
    font-size: 28px;
    margin-bottom: 30px;
    color: #155724;
    text-align: center;
  }

  .notice-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 30px;
    padding: 20px;
  }

