<!-- Approval window -->
<fieldset class="review-window">
    <h3 style="font-weight: normal;">Approve data entry?</h3>

    <button type="button" class="review-approve" onclick="showApprove()">
        <i class="fa-solid fa-thumbs-up"></i>&nbsp; Approve
    </button>&emsp;

    <button type="button" class="review-reject" onclick="showReject()">
        <i class="fa-solid fa-thumbs-down"></i>&nbsp; Reject
    </button>
</fieldset>

<!-- Actual Data Display -->
<fieldset style="width: 100%; margin-bottom: 10px; padding-top: 20px; padding-bottom: 20px">
    <h1 style="margin:0">{{wasteGen.title}}</h1>
    <h3 style="margin:0; font-weight:normal;">
        <i>{{wasteGen.location_name}}</i>
    </h3>
</fieldset>

<div style="display: flex;">
    <fieldset style="width: 100%;">
        <legend>Submission Info</legend>
        <table class="user-profile">
            <tr>
                <td class="label">Submitted by</td>
                <td>{{uppercase wasteGen.lastname}}, {{wasteGen.firstname}}</td>
            </tr>
            <tr>
                <td class="label">Organization Name</td>
                <td>{{wasteGen.company_name}}</td>
            </tr>
            <tr>
                <td class="label">Date Submitted</td>
                <td>{{textDate wasteGen.date_submitted}}</td>
            </tr>
        </table>
    </fieldset>

    <fieldset style="width: 100%;">
        <legend>Collection Info</legend>
        <table class="user-profile">
            <tr>
                <td class="label">Start Date</td>
                <td>{{textDate wasteGen.collection_start}}</td>
            </tr>
            <tr>
                <td class="label">End Date</td>
                <td>{{textDate wasteGen.collection_end}}</td>
            </tr>
        </table>
    </fieldset>

    <fieldset style="width: 95%;">
            <legend>Waste Generation</legend>
            <table class="user-profile">
                <tr>
                    <td class="label">Population (based on Census)</td>
                    <td>{{commaNumber wasteGen.population}}</td>
                </tr>
                <tr>
                    <td class="label">Waste Generation per Capita (Kg/cap-day)</td>
                    <td>{{commaNumber wasteGen.per_capita}}</td>
                </tr>
                <tr>
                    <td class="label">Annual Waste Generation (kg/year)</td>
                    <td>{{commaNumber wasteGen.annual}}</td>
                </tr>
            </table>
        </fieldset>
</div>

<!-- Data tabs -->
<div class="tab">
  <button class="tablinks" onclick="openTab(event, 'Table')" id="defaultOpen">RAW DATA</button>
</div>

<div id="Table" class="tabcontent">
    <div style="display: flex;">
        <div id="data-table-container">
            <div class="table-operations">
                <input type="text" class="tbl-search" placeholder="Enter keyword...">&nbsp;
                <button type="button" class="tbl-export">
                    <i class="fa-solid fa-magnifying-glass"></i>&nbsp; Search
                </button>
                
                <!-- Export buttons -->
                <div style="margin-left: auto;">
                    <button onclick="exportTableToCSV()" class="button tbl-export">
                        <i class="fa-solid fa-file-csv"></i>&nbsp; Export as CSV
                    </button>
                    <button onclick="exportTableToExcel()" class="button tbl-export">
                        <i class="fa-solid fa-file-excel"></i>&nbsp; Export as Excel
                    </button>
                </div>
            </div>

            <!-- Waste Composition -->
            <table class="data-table" id="waste-comp-table">
                <thead>
                    <tr class="tb-header">
                        <th>Waste Type</th>
                        {{#each sectors}}
                            <th style="width: 100px;">{{name}}</th>
                        {{/each}}
                        <th>Total (kg)</th>
                        <th>Percentage (%)</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each supertypes}}
                        <tr>
                            <td colspan="{{add ../sectors.length 3}}" class="tb-supertype"><strong>{{uppercase name}}</strong></td>
                        </tr>
                        {{#each types}}
                            <tr>
                            <td>{{name}}</td>
                            {{#with amounts as |a|}} <!-- Set alias for amounts -->
                                {{#each ../../../sectors}}
                                    <td style="text-align: center;">{{lookup a this.id}}</td>
                                {{/each}}
                                <td style="text-align: center;">{{../totalWeight}}</td>
                                <td style="text-align: center;">{{../percentage}}%</td>
                            {{/with}}
                            </tr>
                        {{/each}}
                        <tr class="tb-subtotal">
                            <td style="text-align: left;"><strong>{{name}} Subtotal</strong></td>
                            {{#each ../sectors}}
                                <td><strong>{{lookup ../this.sectorTotals this.id}}</strong></td>
                            {{/each}}
                            <td><strong>{{this.totalWeight}}</strong></td>
                            <td><strong>{{this.percentage}}%</strong></td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="tb-total">
                        <td style="text-align:left">TOTAL</td>
                        {{#each sectors}}
                        <td>{{lookup ../sectorTotals this.id}}</td>
                        {{/each}}
                        <td>{{grandTotal}}</td>
                        <td>100%</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<!-- Approval modal -->
<div id="approve-modal" class="modal">
    <div class="modal-content">
        <span id="approve-close" class="close">&times;</span>
        <h3 style="font-weight: normal;">Confirm: Approve data entry</h3>

        <button type="button" id="approve-cancel" class="review-cancel">
            <i class="fa-solid fa-think"></i>&nbsp; Cancel
        </button>&emsp;

        <button type="button" class="review-approve" onclick="updateEntry('Approved')">
            <i class="fa-solid fa-thumbs-up"></i>&nbsp; Approve
        </button>
    </div>
</div>

<!-- Rejection modal -->
<div id="reject-modal" class="modal">
    <div class="modal-content">
        <span id="reject-close" class="close">&times;</span>
        <h3 style="font-weight: normal;">Reject data entry?</h3>

        <div>
            <!-- Reasons for rejection -->
            <h3 style="text-align: left; margin-left: 5%;">Reasons for rejection:</h3>

            <textarea id="reject-notes" placeholder="State reasons for rejection... (up to 300 characters only)"></textarea>
        </div><br>

        <!-- Modal buttons -->
        <button type="button" id="reject-cancel" class="review-cancel">
            <i class="fa-solid fa-think"></i>&nbsp; Cancel
        </button>&emsp;

        <button type="button" class="review-reject" onclick="updateEntry('Rejected')">
            <i class="fa-solid fa-thumbs-down"></i>&nbsp; Reject
        </button>
    </div>
</div>

<!-- Success modals -->
<div id="success-approve" class="modal">
    <div class="modal-content">
        <h3>Success</h3>
        Data entry has been approved.<br><br>

        <a href="/dashboard/data/submissions">
            <button type="button" class="review-approve">
                Return to Submissions List
            </button>
        </a>
    </div>
</div>

<div id="success-reject" class="modal">
    <div class="modal-content">
        <h3>Success</h3>
        Data entry has been rejected.<br><br>

        <a href="/dashboard/data/submissions">
            <button type="button" class="review-approve">
                Return to Submissions List
            </button>
        </a>
    </div>
</div>

<!-- Modal script -->
<script>

// Get ID of current entry
const entryId = {{{ entryId }}}
const reviewedBy = {{{ reviewer }}}

// Wait for the DOM to be fully loaded
document.addEventListener('DOMContentLoaded', function() {
    // Modal functionality
    const approveModal = document.getElementById('approve-modal');
    const approveClose = document.getElementById('approve-close');
    const approveCancel = document.getElementById('approve-cancel');

    /* APPROVE MODAL */
    // Hide modal if close btn is clicked
    if (approveClose) {
        approveClose.onclick = function() {
            approveModal.style.display = "none";
        }
    }

    // Hide modal if Cancel button is clicked
    if (approveCancel) {
        approveCancel.onclick = function() {
            approveModal.style.display = "none";
        }
    }
    
    // Hide modal if user clicks outside content
    window.onclick = function(event) {
        if (event.target == approveModal) {
            approveModal.style.display = "none";
        }
    }

    /* REJECT MODAL */
    const rejectModal = document.getElementById('reject-modal');
    const rejectClose = document.getElementById('reject-close');
    const rejectCancel = document.getElementById('reject-cancel');

    // Hide modal if close btn is clicked
    if (rejectClose) {
        rejectClose.onclick = function() {
            rejectModal.style.display = "none";
        }
    }

    // Hide modal if Cancel button is clicked
    if (rejectCancel) {
        rejectCancel.onclick = function() {
            rejectModal.style.display = "none";
        }
    }
    
    // Hide modal if user clicks outside content
    window.onclick = function(event) {
        if (event.target == rejectModal) {
            rejectModal.style.display = "none";
        }
    }
})

function showApprove() {
    document.getElementById('approve-modal').style.display = 'block';
}

function showReject() {
    document.getElementById('reject-modal').style.display = 'block';
}

function updateEntry(status) {
    if(status === 'Approved') {
        // Send request to server
        reviewApi('Approved', null, reviewedBy)
            .then(response => {
                if (response.success) {                
                    // Pop up to show success
                    document.getElementById('approve-modal').style.display = 'none'
                    document.getElementById('success-approve').style.display = 'block'
                } else {
                    throw new Error(response.message || 'Failed to approve application')
                }
            })
    } else { // Rejected
        const rejectionReason = document.getElementById('reject-notes').value

        // Send request to server
        reviewApi('Rejected', rejectionReason, reviewedBy)
            .then(response => {
                if (response.success) {                
                    // Pop up to show success
                    document.getElementById('reject-modal').style.display = 'none'
                    document.getElementById('success-reject').style.display = 'block'
                } else {
                    throw new Error(response.message || 'Failed to reject application')
                }
            })
    }
}

async function reviewApi(status, rejectionReason, reviewedBy) {
    try {
        const response = await fetch(`/api/data/${entryId}/status`, {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                status,
                rejectionReason,
                reviewedBy
            })
        });
        
        if (!response.ok) {
            console.error(`Server response not OK: ${response.status} ${response.statusText}`);
            const errorText = await response.text();
            console.error('Error response body:', errorText);
            throw new Error(`Server responded with ${response.status}: ${response.statusText}`);
        }
        
        const data = await response.json();
        console.log('Status update response:', data);
        return data;
    } catch (error) {
        console.error('Error in reviewApi() -- ', error);
        throw error;
    }
}

</script>

